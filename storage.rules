rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // CVs e documenti degli utenti - ogni utente può gestire solo i propri file
    match /users/{userId}/cvs/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Altri documenti degli utenti
    match /users/{userId}/documents/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Avatar/profile pictures - tutti possono leggere, solo il proprietario può scrivere
    match /users/{userId}/profile/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
